<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" prefHeight="480.0" prefWidth="480.0" styleClass="blue-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.HelloController">
        <children>
            <Label text="Login" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
                <VBox.margin>
                    <Insets left="20.0" />
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="tf_box" stylesheets="@styles.css">
                <children>
                    <TextField id="tfusername" fx:id="tfusername" promptText="Username" styleClass="tf_box" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets left="15.0" right="15.0" top="15.0" />
                        </HBox.margin></TextField>
                </children>
                <VBox.margin>
                    <Insets />
                </VBox.margin></HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="tf_box" stylesheets="@styles.css">
                <children>
                    <PasswordField id="pfpassword" fx:id="pfpassword" promptText="Password" stylesheets="@styles.css" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets left="15.0" right="15.0" top="15.0" />
                        </HBox.margin>
                    </PasswordField>
                </children>
            </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
         <children>
                  <Button id="btnsignin" fx:id="btnsignin" alignment="CENTER" mnemonicParsing="false" onAction="#onRead" prefWidth="200.0" text="Sign in" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="15.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnregister" alignment="CENTER" mnemonicParsing="false" onAction="#onCreate" prefWidth="200.0" text="Register" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </HBox>
        </children>
</VBox>
